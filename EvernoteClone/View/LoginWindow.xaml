<Window x:Class="EvernoteClone.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:EvernoteClone.View"
        xmlns:vm="clr-namespace:EvernoteClone.ViewModel"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Title="LoginWindow" Height="300" Width="300" BorderThickness="1,1,1,1">
    <Window.Resources>
        <ResourceDictionary>
            <vm:LoginVM x:Key="vm"/>
        </ResourceDictionary>
    </Window.Resources>
    <Grid DataContext="{StaticResource vm}">
        <StackPanel Visibility="{Binding LoginVisibility}" Margin="10">
            <TextBlock Text="Username:" />
            <TextBox Text="{Binding User.Username, Mode=TwoWay}"/>
            <TextBlock Text="Password:" />
            <TextBox Text="{Binding User.Password, Mode=TwoWay}"/>
            <Button Content="Login" Margin="0,5" Command="{Binding LoginCommand}" CommandParameter="{Binding User}"/>
            <TextBlock Text="Register" Foreground="DodgerBlue" TextDecorations="Underline">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseLeftButtonDown">
                        <i:InvokeCommandAction Command="{Binding ShowRegisterCommand}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </TextBlock>
        </StackPanel>
        <StackPanel Visibility="{Binding RegisterVisibility}" Margin="10">
            <TextBlock Text="Username:" />
            <TextBox Text="{Binding User.Username, Mode=TwoWay}"/>
            <TextBlock Text="Name:" />
            <TextBox Text="{Binding User.Name, Mode=TwoWay}"/>
            <TextBlock Text="Last name:" />
            <TextBox Text="{Binding User.Lastname, Mode=TwoWay}"/>
            <TextBlock Text="Password:" />
            <TextBox Text="{Binding User.Password, Mode=TwoWay}"/>
            <TextBlock Text="Confirm password:" />
            <TextBox Text="{Binding User.ConfirmPassword, Mode=TwoWay}"/>
            <Button Content="Register" Margin="0,5" Command="{Binding RegisterCommand}" CommandParameter="{Binding User}"/>
            <TextBlock Text="Login" Foreground="DodgerBlue" TextDecorations="Underline">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseLeftButtonDown">
                        <i:InvokeCommandAction Command="{Binding ShowRegisterCommand}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
